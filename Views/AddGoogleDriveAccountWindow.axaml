<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="200" d:DesignHeight="250"
        x:Class="MultiClouding.Views.AddGoogleDriveAccountWindow"
        Title="AddGoogleDriveAccountWindow"
        Width="300"
        Height="250">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock 
                TextWrapping="Wrap"
                Text="Login into your google account using the browser we've opened for you"/>
            <Button 
                Margin="0, 10,0,0"
                Command="{Binding CloseCommand}"
                Content="{Binding CloseBtnText}"/>
        </StackPanel>
</Window>
